// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String

  @@map("users")
}

model Categories{
  id Int @id @default(autoincrement())
  name String @unique

  @@map("categories")
}

model Teachers{
  id Int @id @default(autoincrement())
  name String @unique
  TeacherDiscipline TeachersDisciplines[]

  @@map("teachers")
}

model Terms{
  id Int @id @default(autoincrement())
  number Int @unique
  Discipline Disciplines[]

  @@map("terms")
}

model Disciplines{
  id Int @id @default(autoincrement())
  name String @unique
  termId Int
  terms Terms @relation(fields: [termId], references: [id])
  TeacherDiscipline TeachersDisciplines[]

  @@map("disciplines")
}

model TeachersDisciplines{
  id Int @id @default(autoincrement())
  teacherId Int
  disciplineId Int
  teachers Teachers @relation(fields: [teacherId], references: [id])
  disciplines Disciplines @relation(fields: [disciplineId], references: [id])

  @@map("teachersDisciplines")
}

model Tests{
  id Int
}



